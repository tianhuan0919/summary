<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/tv_scan_prompt"
        android:layout_width="210dp"
        android:layout_height="82dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/scan_prompt_bg"
        android:orientation="vertical"
        android:visibility="visible">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:textColor="#33363b"
            android:textSize="14sp"
            android:text="无法通过扫码绑定宝盒"
            android:elevation="1dp"
            android:gravity="center"
            android:layout_marginTop="8dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ef5242"
            android:textSize="14sp"
            android:text="试试输入盒子的编号绑定吧"
            android:gravity="center"
            android:layout_marginTop="2dp" />
    </LinearLayout>

    <TextView
        android:layout_marginTop="100dp"
        android:id="@+id/start_anim"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="@dimen/dimen_all_content_text_size"
        android:text="开始动画"
        android:textColor="@color/color_allcontent_text"
        android:gravity="center"
        android:background="#ffffff"
        />

    <TextView
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:id="@+id/property_anim_demo_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="@dimen/dimen_all_content_text_size"
        android:text="PropertyAnimation Demo"
        android:textColor="@color/color_allcontent_text"
        android:gravity="center"
        android:background="#ffffff"
        />

</LinearLayout>