<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/listview_style_btn"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:gravity="center"
        android:text="ListView Style"
        android:textColor="@color/color_allcontent_text"
        android:textSize="@dimen/dimen_all_content_text_size" />

    <TextView
        android:id="@+id/waterfall_flow_style_btn"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:gravity="center"
        android:text="WaterfallFlow Style"
        android:textColor="@color/color_allcontent_text"
        android:textSize="@dimen/dimen_all_content_text_size" />

</LinearLayout>