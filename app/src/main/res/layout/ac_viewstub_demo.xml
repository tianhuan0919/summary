<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:id="@+id/open_detail_info"
        android:layout_marginLeft="20dp"
        android:text="展开详情"
        android:textSize="@dimen/dimen_all_content_text_size"
        android:textColor="@color/color_allcontent_text"
        android:gravity="center"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:id="@+id/close_detail_info"
        android:text="隐藏详情"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/open_detail_info"
        android:textSize="@dimen/dimen_all_content_text_size"
        android:textColor="@color/color_allcontent_text"
        android:gravity="center"/>

    <ViewStub
        android:layout_below="@id/open_detail_info"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/viewstub_view"
        android:layout="@layout/viewstub_add_layout"/>
</RelativeLayout>